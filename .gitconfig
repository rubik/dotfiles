[user]
	email = michelelacchia@gmail.com
	name = Michele Lacchia
[credential]
	helper = cache --timeout=3600
[format]
	pretty = oneline
[color]
	ui = true
[push]
	default = simple
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	s = status
	d = diff
    b = branch
[core]
	editor = vim
