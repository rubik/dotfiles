# i3 config file (v4.8)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
# 22 jul 2015 - E7

###########
# Look
###########

new_window pixel 1
new_float pixel 2

# Hybrid colors
set $back      #1D1F21
set $black     #282A2E
set $grey      #373B41
set $lightgrey #707880
set $white     #C5C8C6
set $yellow    #F0C674
set $red       #CC6666
set $darkred   #A54242
set $green     #B5BD56

#class                  border      backgr.     text        split
client.focused          $green      $green      $black      $red
client.focused_inactive $grey       $grey       $lightgrey  $grey
client.unfocused        $grey       $grey       $lightgrey  $grey
client.urgent           $red        $red        $black      $red
client.background       $back

##############
# Applications
##############

# Principal mod key (Super = Win key)
# mod1 = Alt (xmodmap to show)
# mod2 = Num Lock
# mod4 = Winkey (xmodmap to show)
set $mod Mod1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Terminal
bindsym $mod+Shift+Return exec urxvt
# Chromium
bindsym $mod+Shift+i exec chromium
# PCManFM
bindsym $mod+Shift+p exec pcmanfm
# Alsamixer
bindsym $mod+Shift+m exec urxvt -e alsamixer
# Rofi
bindsym $mod+p exec rofi -show run
# Scrot
bindsym Print exec scrot

# Media keys
bindsym XF86AudioRaiseVolume exec --no-startud-id "amixer sset Master 5%+"
bindsym XF86AudioLowerVolume exec --no-startud-id "amixer sset Master 5%-"
bindsym XF86AudioMute exec --no-startud-id "amixer -q sset Master toggle"

#assign application to workspace
assign [class="chromium"] 2:web

# Layout
for_window [class="(?i)feh"] floating enable

############
# Keybinds i3
############

# disable this shit
focus_follows_mouse no

# kill focused window (mod+shift+c)
bindsym $mod+Shift+c kill

# hjkl to change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Shitf+hjkl to move windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation (mod+o)
bindsym $mod+o split h
bindsym $mod+Mod4+Left split h
bindsym $mod+Mod4+Right split h

# split in vertical orientation (mod+v)
bindsym $mod+v split v
bindsym $mod+Mod1+Down split v
bindsym $mod+Mod1+Up split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout default
bindsym $mod+w layout toggle split

# change focus between tiling / floating windows (mod+space)
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+z focus child

# switch to workspace
bindsym $mod+1 workspace 1:dev
bindsym $mod+2 workspace 2:web
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1:dev
bindsym $mod+Shift+2 move container to workspace 2:web
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# resize window (you can also use the mouse for that)
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode
  bindsym h resize grow width 5 px or 5 ppt
  bindsym j resize shrink height 5 px or 5 ppt
  bindsym k resize grow height 5 px or 5 ppt
  bindsym l resize shrink width 5 px or 5 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# My bar
bar {
  i3bar_command ~/.config/lemonbar/i3_lemonbar.sh
}
