! Make Man pages colored
*VT100.colorBDMode:     true
*VT100.colorBD:         red
*VT100.colorULMode:     true
*VT100.colorUL:         cyan
*VT100.veryBoldColors:  6

! Native transparency
URxvt.transparent: true
URxvt.shading: 23

! Set the icon
URxvt.iconFile: /usr/share/icons/gnome/256x256/apps/terminal.png

! Adjust the scrollbar
URxvt.scrollBar: false

! Adjust the geometry
URxvt.geometry: 90x37

! Keep borders
URxvt.borderLess: false

! Font and letter spacing
! URxvt.font: xft:Monospace:pixelsize=13:antialias=true
URxvt.font: xft:Meslo LG M for Powerline:pixelsize=13:antialias=false
URxvt.letterSpace: -1

! Perl extensions
URxvt.perl-ext-common: default

URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-v:     \026

